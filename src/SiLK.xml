<?xml version="1.0" encoding="utf-8" ?>
<Ui xmlns="http://www.blizzard.com/wow/ui/"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
  <Script file="Silk.lua"/>
  <Frame name="SilkFrame">
    <Scripts>
      <OnLoad>
        self:RegisterEvent("ADDON_LOADED");
        self:RegisterEvent("CHAT_MSG_ADDON");
      </OnLoad>
      <OnEvent>
        Silk_OnEvent(self, event, ...);
      </OnEvent>
      <OnUpdate>
        Silk_OnUpdate();
      </OnUpdate>
    </Scripts>
  </Frame>

  <Frame name="SilkTitleBarTemplate" virtual="true">
    <Layers>
      <Layer level="ARTWORK">
        <Texture name="$parentBg" parentKey="BG">
          <Color r="0.5" g="0.5" b="0.5"/>
          <Gradient orientation="HORIZONTAL">
            <MinColor r="0.25" g="0.75" b="1"/>
            <MaxColor r="0" g="0" b="0"/>
          </Gradient>
        </Texture>
        <FontString name="$parentTitleText" parentKey="label" inherits="GameFontNormalSmall" text="YOLO" justifyH="LEFT" justifyV="TOP">
          <Anchors>
            <Anchor point="LEFT">
              <Offset>
                <AbsDimension x="5" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
          <FontHeight>
            <AbsValue val="20"/>
          </FontHeight>
          <Color r="1" g="1" b="1"/>
          <Shadow>
            <Offset>
              <AbsDimension x="1" y="-1"/>
            </Offset>
            <Color r="0" g="0" b="0"/>
          </Shadow>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <StatusBar name="SilkStatusBarTemplate" virtual="true">
    <Anchors>
      <Anchor point="BOTTOMLEFT" x="2" y="2"/>
      <Anchor point="TOPRIGHT" x="-2" y="-2"/>
    </Anchors>
    <BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
    <BarColor r="0" g="0.75" b="0"/>
  </StatusBar>
</Ui>
